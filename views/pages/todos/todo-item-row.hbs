<tr id='todo_item_{{id}}'>
  <td class='w-12'>
    {{id}}
  </td>
  <td>
    {{email}}
  </td>
  <td>
    {{name}}
  </td>
  <td>
    <div class='flex items-center gap-2'>
      <button class='btn btn-primary loading-btn' hx-get='/todos-page/todo-inputs/{{id}}'
        hx-target='#todo-modal-form-inputs'>
        <span class='loading loading-spinner'>
        </span>
        Edit
      </button>
      <button class='btn btn-error' onclick='delete_todo_{{id}}_modal.showModal()'>
        Delete
      </button>
      {{> deleteTodoModal }}
    </div>
  </td>
</tr>
