<dialog id='create_todo_modal' class='modal'>
  <div class='modal-box'>
    <h3 class='text-lg font-bold'>Create todo</h3>
    <form
      id='create_todo_form'
      hx-post='/todos-page'
      hx-target='#todo_table_body'
      hx-swap='afterbegin'
    >
      <div class='mt-4'>
        <label for='name'>
          Name:
        </label>
        <input id='name' class='input input-sm' name='name' />
      </div>
      <button class='btn btn-primary mt-4' type='submit'>
        Confirm
      </button>
    </form>
    <div class='modal-action'>
      <form method='dialog'>
        <button class='btn' onclick='create_todo_form.reset()'>
          Cancel
        </button>
      </form>
    </div>
  </div>
</dialog>
