<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <title>Todos</title>
  <link href="output_main.css" rel="stylesheet">
  </link>
  <script src="htmx.min.js"></script>
  <script src="todos_page/index.js" defer></script>
</head>

<body>
  <div class="p-2.5">
    <h1 class="text-center text-2xl font-bold">
      Todo list
    </h1>
    <button class="btn btn-success float-right">
      Create
    </button>
    <table class="table table-zebra">
      <thead>
        <th>
          ID
        </th>
        <th>
          Name
        </th>
        <th>
          Action
        </th>
      </thead>
      {{#each todos}}
      <tr id="todo_item_{{this.id}}">
        <td>
          {{this.id}}
        </td>
        <td>
          {{this.name}}
        </td>
        <td>
          <button class="btn btn-primary">
            Edit
          </button>
          <button class="btn btn-error" onclick="delete_todo_{{this.id}}_modal.showModal()">
            Delete
          </button>
        </td>
      </tr>
      {{!-- delete todo item modal --}}
      {{> deleteTodoModal }}
      {{!-- delete todo item modal --}}
      {{/each}}
    </table>
  </div>
</body>

</html>
