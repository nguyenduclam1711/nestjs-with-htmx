<html>

<head>
  {{> commonHeader }}
</head>

<body>
  <div class="flex justify-center items-center mt-10">
    <div class="card card-bordered bg-base-100 w-96 shadow-xl">
      <div class="card-body items-center">
        <h1 class="card-title">
          Login
        </h1>
        <form class="flex gap-4 flex-col" hx-post="/login">
          <label class="input input-bordered flex items-center gap-2">
            Email
            <input name="email" type="text" class="grow" autocomplete="email" />
          </label>
          <label class="input input-bordered flex items-center gap-2">
            Password
            <input name="password" type="password" class="grow" autocomplete="current-password" />
          </label>
          <a class="link link-primary" href="/register">
            Register
          </a>
          <button class="btn" type="submit">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</body>

</html>
