<div class='mb-4'>
  <label class='input input-bordered flex items-center gap-2'>
    Email
    <input name='email' type='text' class='grow' autocomplete='email' value='{{email}}' />
  </label>
  {{#if error.email}}
  <div class='label'>
    <span class='label-text-alt text-red-400'>{{error.email}}</span>
  </div>
  {{/if}}
</div>
<div>
  <label class='input input-bordered flex items-center gap-2'>
    Password
    <input name='password' type='password' class='grow' autocomplete='current-password' value='{{password}}' />
  </label>
  {{#if error.password}}
  <div class='label'>
    <span class='label-text-alt text-red-400'>{{error.password}}</span>
  </div>
  {{/if}}
</div>
{{#if errorMessage}}
<div class="alert alert-error mt-4">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
      d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
  </svg>
  <span>{{errorMessage}}</span>
</div>
{{/if}}
